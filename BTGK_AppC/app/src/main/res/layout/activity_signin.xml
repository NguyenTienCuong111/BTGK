<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/br_login"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="637dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/login" />

        <EditText
            android:id="@+id/edittextuser"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:ems="15"
            android:hint="  User Name"
            android:paddingLeft="20dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#0C0C0C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittextpassword"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:ems="15"
            android:hint="  Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#090909"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttondangnhap"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"

            android:text="LOGIN ME"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonsignup"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/round_bg"

            android:text="SIGN UP"
            android:textColor="#FFFFFF" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gmaillogin"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/icons8_google_48px" />

            <ImageView
                android:id="@+id/fblogin"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:background="@drawable/facebook_48px" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>